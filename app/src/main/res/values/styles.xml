<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Panel_header" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="Title" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Lines_settings" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_weight">1</item>
        <item name="elevation">0dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="EditText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/search_edittext</item>
        <item name="android:drawableStart">@drawable/search2</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textColorHint">?attr/colorPrimaryInverse</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

</resources>