<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Panel_header" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="MyAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/white</item> <!-- фон диалога -->
        <item name="colorOnSurface">@color/YP_Black</item>    <!-- цвет текста -->
        <item name="colorPrimary">@color/YP_Blue</item>       <!-- кнопки -->
    </style>


    <style name="RoundedTextInput" parent="">
        <item name="boxBackgroundMode">outline</item>
        <item name="cornerFamily">rounded</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="hintAnimationEnabled">true</item>
    </style>

    <style name="Title" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Lines_settings" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_weight">1</item>
        <item name="elevation">0dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ButtonStyleBlack" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="elevation">0dp</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">24dp</item>

    </style>

    <style name="EditText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/search_edittext</item>
        <item name="android:drawableStart">@drawable/search2</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textColorHint">?attr/colorPrimaryInverse</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="TextView.Regular.16.Black" parent="">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.Regular.11.YPGRAY" parent="TextView.Regular.16.Black">
        <item name="android:textColor">@color/YP_Text_Gray</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextView.Medium.19.black" parent="">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">center_horizontal</item>

    </style>
    
    <style name="TextView.Bold.24.black" parent="">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="TextView.Medium.22.black" parent="TextView.Medium.19.black">
        <item name="android:textSize">22sp</item>

    </style>

    <style name="TextView.Medium.14.black" parent="TextView.Medium.19.black">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Medium.16" parent="">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextView.Regular.13.YPGRAY" parent="TextView.Regular.11.YPGRAY">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextView.Regular.13.black" parent="">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextView.Regular.12.black" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextView.Regular.18.black" parent="TextView.Regular.19.black">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.Regular.19.black" parent="">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="android:fontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
    </style>


</resources>